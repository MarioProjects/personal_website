---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<script>
  import { timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";

  const sequence = [
    loaderAnimation,
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout title="404 - Page Not Found" description="The page you are looking for does not exist.">
  <main class="relative z-10 flex flex-col justify-center items-center h-screen w-screen text-center p-4">
    <h1 class="text-9xl font-bold mb-4 text-primary-500">404</h1>
    <h2 class="text-3xl font-bold mb-6">Page Not Found</h2>
    <p class="text-xl mb-8 max-w-md">
      Oops! The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
    </p>
    <a
      href="/"
      class="flex items-center gap-2 bg-primary-500 hover:opacity-90 text-white px-6 py-3 rounded-lg transition-all duration-200 border border-transparent shadow-lg hover:scale-105"
    >
      <Icon name="mdi:home" class="text-xl" />
      Back to Home
    </a>
  </main>
</Layout>
