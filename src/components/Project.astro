---
import { Icon } from "astro-icon/components";

interface Props {
  title?: string;
  description?: string;
  url?: string;
}

const { title, description, url } = Astro.props;
---

<div
  class="card group overflow-hidden bg-darkslate-500 shadow-lg rounded-lg border border-darkslate-100 hover:border-primary-500 hover:scale-[1.02] align-start flex-none h-auto justify-start relative transform perspective-1200 w-full transition duration-300 ease-in-out col-span-1 md:col-span-2 p-6"
>
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="h-full w-full"
  >
    <Icon
      name="ri:arrow-right-up-line"
      class="h-6 float-right group-hover:text-primary-500 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100 z-20"
    />
    <div>
      <h2 class="font-semibold text-2xl">
        {title}
      </h2>
      <p class="text-gray-500">
        {description}
      </p>
    </div>
  </a>
</div>
